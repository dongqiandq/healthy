<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="3"
        android:background="#8bc34a"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/touxiang" />

            <TextView
                android:id="@+id/tv_click"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:text="点击登录"
                android:textColor="#FFFFFF"
                android:textSize="23sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_help"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/rl_shoucang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_shoucang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/mine_shoucang"/>
            <TextView
                android:id="@+id/tv_shoucang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="收藏"
                android:textSize="18sp"
                android:layout_below="@id/img_shoucang"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_caipu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_caipu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/caipu" />
            <TextView
                android:id="@+id/tv_caipu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="菜谱"
                android:textSize="18sp"
                android:layout_below="@id/img_caipu"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_yaoxiang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_yaoxiang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/yaoxiang" />
            <TextView
                android:id="@+id/tv_yaoxiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="药箱"
                android:textSize="18sp"
                android:layout_below="@id/img_yaoxiang"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_xiaoxi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_xinxi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/xinxi" />
            <TextView
                android:id="@+id/tv_xinxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="消息"
                android:textSize="18sp"
                android:layout_below="@id/img_xinxi"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        tools:ignore="Suspicious0dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#D3D3D3">
        </View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_person"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_personData"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp">
            <ImageView
                android:layout_marginRight="15dp"
                android:id="@+id/img_personMessage"
                android:layout_width="wrap_content"
                android:src="@drawable/mine"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_personMessage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/img_personMessage"
                android:gravity="center_vertical"
                android:text="个人信息"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/img_right1"
                android:src="@drawable/right"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3">
        </View>

        <RelativeLayout
            android:id="@+id/rl_body"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp">
            <ImageView
                android:layout_marginRight="15dp"
                android:id="@+id/img_body"
                android:layout_width="wrap_content"
                android:src="@drawable/body"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_body"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/img_body"
                android:gravity="center_vertical"
                android:text="身体数据"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/img_right2"
                android:src="@drawable/right"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3">
        </View>

        <RelativeLayout
            android:id="@+id/rl_read"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp">
            <ImageView
                android:layout_marginRight="15dp"
                android:id="@+id/img_read"
                android:layout_width="wrap_content"
                android:src="@drawable/read"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_read"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/img_read"
                android:gravity="center_vertical"
                android:text="最近阅读"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/img_right3"
                android:src="@drawable/right"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3">
        </View>

        <RelativeLayout
            android:id="@+id/rl_shezhi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">
            <ImageView
                android:layout_marginRight="15dp"
                android:id="@+id/img_shezhi"
                android:layout_width="wrap_content"
                android:src="@drawable/shezhi"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_shezhi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/img_shezhi"
                android:text="设置"
                android:gravity="center_vertical"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/img_right4"
                android:src="@drawable/right"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3">
        </View>

    </LinearLayout>

</LinearLayout>