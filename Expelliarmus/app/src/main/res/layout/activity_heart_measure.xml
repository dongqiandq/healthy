<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="#ff0a0a">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_heart_back"
            android:text="‹"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测量心率"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:id="@+id/tv_title"/>
    </RelativeLayout>
    <TextView
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textColor="@color/colorRed"
        android:id="@+id/tv_heart_tip"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="350dp">
        <com.example.dell.expelliarmus.CompletedView
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:id="@+id/tasks_view"
            android:layout_marginTop="-80dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            tc:circleColor="@color/white"
            tc:radius="59dip"
            tc:ringBgColor="@color/colorAccentdq"
            tc:ringColor="@color/colorRed"
            tc:strokeWidth="7dip" />

        <com.example.dell.expelliarmus.MySurfaceView
            android:text="心率"
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:background="@drawable/circle"
            android:layout_height="400dp"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/text"
            android:textColor="#fff"
            android:layout_marginTop="-50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_ _次/分钟" >
        </TextView>

    </FrameLayout>

    <Button
        android:id="@+id/dq_start"
        android:text="开始测量"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_width="130dp"
        android:background="@drawable/button_styledq"
        android:layout_gravity="center"
        android:layout_height="50dp" />

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:text="" >
    </TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:text="" >
    </TextView>
</LinearLayout>
