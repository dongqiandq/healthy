<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp">
        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="‹"
            android:id="@+id/img_return"
            android:textSize="50dp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身体数据"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:id="@+id/tv_title"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:text="BMI（身材计算器）"/>

        <LinearLayout
            android:id="@+id/lv_height"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_marginRight="3dp"
                android:text="身高："/>

            <EditText
                android:id="@+id/et_height"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="请输入身高  单位m"
                android:textSize="16sp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_weight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_marginRight="3dp"
                android:text="体重："/>

            <EditText
                android:id="@+id/et_weight"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="请输入体重  单位kg"
                android:textSize="16sp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_getBIM"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:background="@drawable/body_button_style"
                android:text="计算BIM值"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/body_digital"
                android:layout_width="0dp"
                android:layout_weight="2.3"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ededed">
        <com.baoyz.swipemenulistview.SwipeMenuListView
            android:id="@+id/view_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:smoothScrollbar="true">
        </com.baoyz.swipemenulistview.SwipeMenuListView>
    </LinearLayout>

</LinearLayout>